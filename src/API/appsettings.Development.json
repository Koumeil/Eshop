{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "RedisSettings": {
      "Configuration": "localhost:6379",
      "InstanceName": "Ecommerce:"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "YOUR_CONNECTION_STRING_HERE"
  },
  "EmailSettings": {
    "MailServer": "YOUR_SMTP_SERVER",
    "MailPort": 587,
    "SenderName": "Ecommerce",
    "FromEmail": "YOUR_EMAIL_HERE"
  },
  "JwtSettings": {
    "Issuer": "Ecommerce",
    "Audience": "Ecommerce",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "AllowedHosts": "*"
}
