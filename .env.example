#################################################################
#                 üåê ESHOP ‚Äî ENVIRONMENT CONFIG                 
#################################################################

############################################################
# üîê GENERAL ASP.NET ENVIRONMENT
############################################################
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=https://+:7002

############################################################
# üîê SSL / CERTIFICATE
############################################################
# Password for generating PKCS12 certificate inside Docker
CERT_PASSWORD=your_certificate_password_here

############################################################
# üóÑÔ∏è DATABASE ‚Äî POSTGRES
############################################################
POSTGRES_DB=eshop
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password_here

# Connection string used by the API
ConnectionStrings__DefaultConnection=Host=db;Port=5432;Database=${POSTGRES_DB};Username=${POSTGRES_USER};Password=${POSTGRES_PASSWORD}

############################################################
# üìß EMAIL / SMTP SETTINGS
############################################################
EmailSettings__MailServer=smtp.gmail.com
EmailSettings__MailPort=587
EmailSettings__SenderName=Eshop
EmailSettings__FromEmail=your_email_here@gmail.com
EmailSettings__Password=your_email_app_password_here

############################################################
# üîë JWT ‚Äî AUTHENTICATION
############################################################
JwtSettings__SecretKey=your_very_long_random_key_here
JwtSettings__Issuer=Eshop
JwtSettings__Audience=Eshop
JwtSettings__AccessTokenExpirationMinutes=15
JwtSettings__RefreshTokenExpirationDays=7

############################################################
# üíæ REDIS (OPTIONAL BUT RECOMMENDED)
############################################################
RedisSettings__Configuration=localhost:6379
RedisSettings__InstanceName=Eshop:

############################################################
# üìÑ SERILOG LOGGING (OPTIONAL)
############################################################
Serilog__MinimumLevel=Information
